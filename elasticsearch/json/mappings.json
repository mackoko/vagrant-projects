// PUT /books
{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0
  },
  "mappings": {
  	"book": {
  		"properties": {
  			"title": {
  				"type": "text"
  			},
  			"description": {
  				"type": "text"
  			},
  			"author": {
  				"type": "text"
  			},
  			"tags": {
  				"type": "text"
  			},
  			"price": {
  				"type": "scaled_float",
  				"scaling_factor": 100
  			},
			"language": {
  				"type": "keyword"
  			},
  			"pub_date": {
  				"type": "date",
  				"format": "yyyy-MM-dd"
  			},
			"isbn": {
  				"type": "keyword"
  			}
  		}
  	},
    "store": {
      "properties": {
        "name": {
          "type": "keyword"
        },
        "pin": {
          "properties": {
            "location": {
              "type": "geo_point"
            }
          }
        }
      }
    }
  }
}